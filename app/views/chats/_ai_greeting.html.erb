<div class="flex items-start w-full gap-3 p-2">
  <%= render "chats/ai_avatar" %>

  <div class="max-w-[85%] text-sm space-y-4 text-primary">
    <p><%= t("chats.welcome.greeting", name: Current.user&.first_name || t("chats.welcome.fallback_name")) %></p>

    <p>
      <%= t("chats.welcome.commands_hint_html") %>
    </p>

    <div class="space-y-3">
      <p><%= t("chats.welcome.questions_intro") %></p>

      <% questions = [
        { icon: "chart-area", text: t("chats.welcome.questions.portfolio") },
        { icon: "wallet-minimal", text: t("chats.welcome.questions.spending") },
        { icon: "alert-triangle", text: t("chats.welcome.questions.patterns") }
      ] %>

      <div class="space-y-2.5">
        <% questions.each do |question| %>
          <button data-action="chat#submitSampleQuestion"
                  data-chat-question-param="<%= question[:text] %>"
                  class="w-fit flex items-center gap-2 border border-tertiary rounded-full py-1.5 px-2.5 hover:bg-gray-100">
            <%= icon(question[:icon]) %> <%= question[:text] %>
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>